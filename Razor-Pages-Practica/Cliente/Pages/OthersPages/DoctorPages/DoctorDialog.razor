<SfDialog Width="320px" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <DialogEvents OnOpen="OpenDialog"></DialogEvents>
    <DialogTemplates>
        <Header> Add Employee Health Issue </Header>
        <Content>
            <EditForm Enhance Model="HealthIssue" OnSubmit="Save">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Employee ID</label>
                            <input @bind="HealthIssue.EmployeeId" class="form-control" disabled />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Date</label>
                            <InputDate @bind-Value="HealthIssue.Date" class="form-control" />
                        </div>
                        <div class="form-group mt-2">
                            <label class="form-label">Medical Diagnose</label>
                            <InputTextArea @bind-Value="HealthIssue.MedicalDiagnose" class="form-control" />
                        </div>
                    </div>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>
