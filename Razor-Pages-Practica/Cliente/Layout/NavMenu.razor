@page "/nav"



<AuthorizeView>
    <Authorized>
        <div class="top-row ps-3 navbar navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="">
                    Welcome, @context.User.Identity!.Name
                </a>
                <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </div>

        <div class="nav-scrollable" style="overflow-y:auto;">
            <nav class="flex-column">
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="/home/dashboard">
                        <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link p-2" @onclick="ShowAdminMenuContainer" style="cursor:pointer;" href="javascript:void()">
                        <div class="hstack gap-1">
                            <span class="bi bi-person-fill fs-3 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                            <span>Admin</span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-3 text-white" style="margin-left:5rem; visibility:@CssStyle; cursor:pointer;">
                        <div class="hstack gap-1" @onclick="UserClicked">
                            <span class="bi bi-people fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                            <span>Users</span>
                        </div>
                    </div>
                </div>
                <div class="nav-item px-3" style="margin-top:@DepartmentMargin">
                    <NavLink class="nav-link p-2" @onclick="ShowDepartmentContainer" style="cursor:pointer;" href="javascript:void()">
                        <div class="hstack gap-1">
                            <span class="bi bi-backpack4-fill fs-3 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                            <span>Manage</span>
                        </div>
                    </NavLink>
                    <div class="nav-link p-2 text-white" style="margin-left:3 rem; visibility:@DepartmentCssStyle">
                        <ul class="list-group">
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="GeneralDepartmentClicked">
                                    <div class="hstack">
                                        <span class="bi bi-file-medical fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span class="fs-6">General Dept</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="DepartmentClicked">
                                    <div class="hstack">
                                        <span class="bi bi-substack fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span>Department</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="BranchClicked">
                                    <div class="hstack">
                                        <span class="bi bi-chevron-bar-contract fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span>Branch</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none">
                                <hr />
                            </li>
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="CountryClicked">
                                    <div class="hstack">
                                        <span class="bi bi-geo-alt fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span>Country</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="CityClicked">
                                    <div class="hstack">
                                        <span class="bi bi-map-fill fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span>City</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="TownClicked">
                                    <div class="hstack">
                                        <span class="bi bi-geo fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span>Town</span>
                                    </div>
                                </a>
                            </li>
                            <li style="list-style:none">
                                <hr />
                            </li>
                            <li style="list-style:none">
                                <a class="nav-link p-2" style="cursor:pointer;" @onclick="EmployeeClicked">
                                    <div class="hstack">
                                        <span class="bi bi-people-fill  fs-5 text-center" aria-hidden="true" style="margin-top:-2rem;"></span>
                                        <span>Employee</span>
                                    </div>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </Authorized>
</AuthorizeView>

@code {
    private bool collapseNavMenu = true;


    private string? NavMenuCssClass => collapseNavMenu ? "collapse d-md-none" : "d-md-block";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private string DepartmentMargin { get; set; } = "-3.5rem";
    private string CssStyle = "hidden";
    public bool ShowHide { get; set; } = false;

    private void ShowAdminMenuContainer()
    {
        ShowHide = !ShowHide;
        if (ShowHide)
        {
            DepartmentMargin = "0";
            CssStyle = "visible";
        }
        else
        {
            DepartmentMargin = "-3.5rem";
            CssStyle = "hidden";
        }
    }

    private string DepartmentCssStyle = "hidden";
    public bool ShowHideDeparment { get; set; } = false;

    private void ShowDepartmentContainer()
    {
        ShowHideDeparment = !ShowHideDeparment;
        if (ShowHideDeparment)
        {
            DepartmentCssStyle = "visible";
        }
        else
        {
            DepartmentCssStyle = "hidden";
        }
    }

    void GeneralDepartmentClicked()
    {
        allState.GeneralDepartmentClick();
    }

    void DepartmentClicked()
    {
        allState.DepartmentClick();
    }

    void BranchClicked()
    {
        allState.BranchClick();
    }

    void CountryClicked()
    {
        allState.CountryClick();
    }

    void CityClicked()
    {
        allState.CityClick();
    }

    void TownClicked()
    {
        allState.TownClick();
    }

    void EmployeeClicked()
    {
        allState.EmployeeClick();
    }

    void UserClicked()
    {
        allState.UserClick();
    }
}
